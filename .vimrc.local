" Nerdtree specific ignore
let NERDTreeIgnore += ['^.git$', '^.sass-cache$', '^.tsc$', '^bower_components$', '^coverage$', '^dist$', '^docs$', '^node_modules$', '^npm-debug.log$', '^phantomjsdriver.log']
