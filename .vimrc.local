" Directories
set wildignore+=*/.git/**
set wildignore+=*/.tsc/**
set wildignore+=*/.sass-cache/**
set wildignore+=*/bower_components/**
set wildignore+=*/coverage/**
set wildignore+=*/dist/**
set wildignore+=*/docs/**
